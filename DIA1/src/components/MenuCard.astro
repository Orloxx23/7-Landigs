---
interface Props {
  title: string;
  image: string;
}

const { title, image } = Astro.props;
---

<div class="aspect-square size-full overflow-hidden relative">
  <img
    src={image}
    alt={title}
    class="object-cover hover:scale-105 transition duration-300 ease-in-out size-full absolute"
  />
  <div class="absolute bottom-0 min-h-20">
    <div class="bg-black bg-opacity-70 p-4">
      <h3 class="text-white text-2xl font-bold">{title}</h3>
    </div>
  </div>
</div>
